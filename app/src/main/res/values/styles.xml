<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/motioneye_dark_grey</item>
        <item name="fontFamily">@font/mavenpro_variable</item>
        <item name="colorPrimaryDark">@color/motioneye_darker_grey</item>
        <item name="colorAccent">@color/motioneye_blue</item>
        <item name="android:colorBackground">@color/motioneye_grey</item>
        <item name="android:navigationBarColor">@color/transparent</item>

        <item name="colorPrimaryVariant">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorSecondary">#2962FF</item>
        <item name="colorSecondaryVariant">#0039CB</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorError">#F44336</item>
        <item name="colorOnError">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#212121</item>
        <item name="colorOnBackground">#212121</item>
s
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="textInputStyle">@style/AppTextField</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/motioneye_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTextField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/motioneye_dark_grey</item>
        <item name="hintTextColor">@color/motioneye_blue</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="boxStrokeColor">@color/motioneye_blue</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
    </style>

    <style name="FABStyle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.DeviceDefault.Dialog.Alert">
        <item name="android:background">@color/motioneye_dark_grey</item>
        <item name="colorAccent">@color/motioneye_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkPopUpStyle" parent="Theme.MaterialComponents">
        <item name="android:colorBackground">@color/motioneye_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.MaterialComponents.Light" />

    <style name="FullscreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:alertDialogTheme">@style/CustomDialog</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="android:colorBackground">@color/black_overlay</item>
    </style>

    <style name="PreferenceScreen" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/mavenpro_variable</item>
        <item name="android:textColorSecondary">@color/text_light_gray</item>
        <item name="android:divider">@color/divider_dark_grey</item>
        <item name="android:windowBackground">@color/motioneye_grey</item>
        <item name="android:colorAccent">@color/motioneye_blue</item>
        <item name="android:colorControlActivated">@color/motioneye_blue</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:textColor">@color/motioneye_blue</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/motioneye_darkerish_grey</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:color">@color/motioneye_blue</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.8dp</item>
        <item name="android:background">@color/text_dark_grey</item>
    </style>

</resources>
