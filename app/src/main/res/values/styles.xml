<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/motioneye_dark_grey</item>
        <item name="colorPrimaryDark">@color/motioneye_darker_grey</item>
        <item name="colorAccent">@color/motioneye_blue</item>
        <item name="android:colorBackground">@color/motioneye_grey</item>
        <item name="android:navigationBarColor">@color/transparent</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.DeviceDefault.Dialog.Alert" tools:targetApi="lollipop_mr1">
        <item name="android:background">@color/motioneye_dark_grey</item>
        <item name="colorAccent">@color/motioneye_blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkPopUpStyle" parent="AppTheme">
        <item name="android:colorBackground">@color/motioneye_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
    </style>

    <style name="FullscreenTheme" parent="AppTheme.NoActionBar">
        <item name="android:alertDialogTheme">@style/CustomDialog</item>
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:colorBackground">@color/black_overlay</item>
    </style>

    <style name="PreferenceScreen" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/text_light_gray</item>
        <item name="android:listDivider">@color/text_dark_grey</item>
        <item name="android:windowBackground">@color/motioneye_grey</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/motioneye_blue</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/motioneye_darkerish_grey</item>
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="ProgressBarStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:color">@color/motioneye_blue</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_dark_grey</item>
    </style>

</resources>
